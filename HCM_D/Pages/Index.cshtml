@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-3">Welcome to NovaHR Solutions</h1>
    <p class="lead">Empowering your workforce with modern HR management tools.</p>
    <p class="mb-4">NovaHR Solutions is a leading provider of human capital management software, helping organizations streamline employee management, payroll, and performance tracking. Our platform is designed for efficiency, security, and a great user experience.</p>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Key Features</h5>
                    <ul class="list-unstyled mb-0">
                        <li><i class="bi bi-people-fill me-2"></i>Employee Directory &amp; Profiles</li>
                        <li><i class="bi bi-building me-2"></i>Department Management</li>
                        <li><i class="bi bi-currency-dollar me-2"></i>Salary &amp; Payroll History</li>
                        <li><i class="bi bi-bar-chart-line me-2"></i>Performance Tracking</li>
                        <li><i class="bi bi-shield-lock me-2"></i>Secure Role-based Access</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
