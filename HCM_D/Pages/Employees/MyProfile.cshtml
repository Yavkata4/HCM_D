@page
@model HCM_D.Pages.Employees.MyProfileModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title mb-4"><i class="bi bi-person-circle me-2"></i>My Profile</h2>
                    @if (Model.Employee != null)
                    {
                        <dl class="row mb-0">
                            <dt class="col-sm-4">First Name</dt>
                            <dd class="col-sm-8">@Model.Employee.FirstName</dd>

                            <dt class="col-sm-4">Last Name</dt>
                            <dd class="col-sm-8">@Model.Employee.LastName</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.Employee.Email</dd>

                            <dt class="col-sm-4">Job Title</dt>
                            <dd class="col-sm-8">@Model.Employee.JobTitle</dd>

                            <dt class="col-sm-4">Salary</dt>
                            <dd class="col-sm-8">@Model.Employee.Salary.ToString("C")</dd>

                            <dt class="col-sm-4">Department</dt>
                            <dd class="col-sm-8">@Model.Employee.Department?.Name</dd>
                        </dl>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">No profile data found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>