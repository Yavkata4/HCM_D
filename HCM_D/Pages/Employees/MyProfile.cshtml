@page
@model HCM_D.Pages.Employees.MyProfileModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12">
            @if (Model.ProfileWasJustCreated)
            {
                <!-- Welcome message for new profile -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="alert alert-success border-0 shadow-sm">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-15 p-2 rounded-circle me-3">
                                    <i class="bi bi-check-circle text-success"></i>
                                </div>
                                <div>
                                    <h5 class="alert-heading mb-1">Welcome to ElevateHR! 🎉</h5>
                                    <p class="mb-0">Your employee profile has been automatically created. You can now access all your information and features. Contact HR if you need any details updated.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Employee != null)
            {
                <!-- Profile Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <div class="card-body text-white p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-white bg-opacity-25 p-3 rounded-circle me-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-person-fill display-4"></i>
                                            </div>
                                            <div>
                                                <h2 class="mb-1 fw-bold">@Model.Employee.FullName</h2>
                                                <p class="mb-1 fs-5 opacity-90">@Model.Employee.JobTitle</p>
                                                <p class="mb-0 opacity-75">
                                                    <i class="bi bi-building me-1"></i>
                                                    @Model.Employee.Department?.Name
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-md-end">
                                        <div class="d-flex flex-column align-items-md-end">
                                            <span class="badge bg-white text-primary fs-6 mb-2">@Model.Employee.EmployeeNumber</span>
                                            <small class="opacity-75">
                                                <i class="bi bi-calendar-event me-1"></i>
                                                @Model.Employee.YearsOfService.ToString("F1") years of service
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile Details -->
                <div class="row">
                    <!-- Personal Information -->
                    <div class="col-lg-6 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-white border-0 pb-0">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white p-2 rounded me-3">
                                        <i class="bi bi-person-lines-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">Personal Information</h5>
                                        <small class="text-muted">Your personal details</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Full Name</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person me-2 text-primary"></i>
                                                <span class="fs-6">@Model.Employee.FullName</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">First Name</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-badge me-2 text-primary"></i>
                                                <span>@Model.Employee.FirstName</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Last Name</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-badge me-2 text-primary"></i>
                                                <span>@Model.Employee.LastName</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Email Address</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-envelope me-2 text-primary"></i>
                                                <a href="mailto:@Model.Employee.Email" class="text-decoration-none">@Model.Employee.Email</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Employment Information -->
                    <div class="col-lg-6 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-white border-0 pb-0">
                                <div class="d-flex align-items-center">
                                    <div class="bg-success text-white p-2 rounded me-3">
                                        <i class="bi bi-briefcase-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">Employment Details</h5>
                                        <small class="text-muted">Your job information</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Employee Number</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-hash me-2 text-success"></i>
                                                <span class="badge bg-success fs-6">@Model.Employee.EmployeeNumber</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Job Title</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-briefcase me-2 text-success"></i>
                                                <span class="fw-medium">@Model.Employee.JobTitle</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Department</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-building me-2 text-success"></i>
                                                <span>@Model.Employee.Department?.Name</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Hire Date</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-calendar-event me-2 text-success"></i>
                                                <span>@Model.Employee.HireDate.ToString("MMM dd, yyyy")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted">Years of Service</label>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-clock-history me-2 text-success"></i>
                                                <span class="badge bg-info">@Model.Employee.YearsOfService.ToString("F1") years</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Compensation Information -->
                    <div class="col-lg-12 mb-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 pb-0">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-warning text-white p-2 rounded me-3">
                                            <i class="bi bi-currency-dollar"></i>
                                        </div>
                                        <div>
                                            <h5 class="mb-0">Compensation</h5>
                                            <small class="text-muted">Your salary information</small>
                                        </div>
                                    </div>
                                    <a asp-page="/SalaryHistories/MyHistory" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-clock-history me-1"></i>
                                        View Salary History
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-warning bg-opacity-15 p-3 rounded-circle me-3">
                                                <i class="bi bi-currency-dollar text-warning display-6"></i>
                                            </div>
                                            <div>
                                                <div class="text-muted small">Current Salary</div>
                                                <div class="display-6 fw-bold text-warning">@Model.Employee.Salary.ToString("C0")</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        @{
                                            var monthlySalary = Model.Employee.Salary / 12;
                                            var weeklySalary = Model.Employee.Salary / 52;
                                        }
                                        <div class="row g-3">
                                            <div class="col-6">
                                                <div class="text-center p-2 bg-light rounded">
                                                    <div class="fw-bold text-primary">@monthlySalary.ToString("C0")</div>
                                                    <small class="text-muted">Monthly</small>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="text-center p-2 bg-light rounded">
                                                    <div class="fw-bold text-success">@weeklySalary.ToString("C0")</div>
                                                    <small class="text-muted">Weekly</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions - Restricted for Employees -->
                    <div class="col-lg-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 pb-0">
                                <div class="d-flex align-items-center">
                                    <div class="bg-info text-white p-2 rounded me-3">
                                        <i class="bi bi-lightning-charge"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">Quick Actions</h5>
                                        <small class="text-muted">Available features</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row g-3 justify-content-center">
                                    <div class="col-lg-6 col-md-6">
                                        <a asp-page="/SalaryHistories/MyHistory" class="btn btn-outline-primary w-100 h-100 d-flex flex-column justify-content-center align-items-center py-3">
                                            <i class="bi bi-clock-history display-6 mb-2"></i>
                                            <span>Salary History</span>
                                        </a>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <a asp-page="/Index" class="btn btn-outline-info w-100 h-100 d-flex flex-column justify-content-center align-items-center py-3">
                                            <i class="bi bi-speedometer2 display-6 mb-2"></i>
                                            <span>Dashboard</span>
                                        </a>
                                    </div>
                                    <!-- Removed My Department, Employee Directory, and Account Settings options -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- No Profile Found (This should now be rare) -->
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-person-x text-muted display-1"></i>
                                <h4 class="text-muted mt-3">Profile Setup Issue</h4>
                                <p class="text-muted">We encountered an issue setting up your employee profile. Please contact your HR administrator for assistance.</p>
                                <div class="mt-4">
                                    <a asp-page="/Index" class="btn btn-primary me-2">
                                        <i class="bi bi-house me-1"></i>
                                        Go to Dashboard
                                    </a>
                                    <a href="mailto:hr@elevatehr.com" class="btn btn-outline-secondary">
                                        <i class="bi bi-envelope me-1"></i>
                                        Contact HR
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.info-item {
    padding: 1rem;
    border-radius: 8px;
    background: rgba(248, 249, 250, 0.5);
    transition: all 0.3s ease;
}

.info-item:hover {
    background: rgba(248, 249, 250, 0.8);
    transform: translateY(-2px);
}

.info-item label {
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
}

.card-header {
    padding: 1.5rem 1.5rem 0.5rem 1.5rem;
}

.hover-action {
    transition: all 0.3s ease;
}

.hover-action:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}
</style>