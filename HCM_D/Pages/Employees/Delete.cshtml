@page
@model HCM_D.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this employee?</h4>

<div class="border p-3 mt-3">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Employee.FirstName @Model.Employee.LastName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Employee.Email</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.Employee.Department?.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
