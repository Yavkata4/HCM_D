@page
@model HCM_D.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm content-glass">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="mb-0">Edit Employee</h3>
                        <span class="badge bg-primary">ID: @Model.Employee.EmployeeNumber</span>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h6 class="alert-heading">Please correct the following errors:</h6>
                            <div asp-validation-summary="All" class="text-danger mb-0"></div>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Employee.Id" />
                        
                        <div class="row g-3">
                            <!-- Employee Number (readonly) -->
                            <div class="col-md-6">
                                <label asp-for="Employee.EmployeeNumber" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-badge-cc"></i></span>
                                    <input asp-for="Employee.EmployeeNumber" class="form-control bg-light" readonly />
                                </div>
                                <small class="form-text text-muted">Employee number cannot be changed</small>
                                <span asp-validation-for="Employee.EmployeeNumber" class="text-danger"></span>
                            </div>

                            <!-- Hire Date -->
                            <div class="col-md-6">
                                <label asp-for="Employee.HireDate" class="form-label"></label>
                                <input asp-for="Employee.HireDate" type="date" class="form-control" />
                                <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                            </div>

                            <!-- First Name -->
                            <div class="col-md-6">
                                <label asp-for="Employee.FirstName" class="form-label"></label>
                                <input asp-for="Employee.FirstName" class="form-control" />
                                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <label asp-for="Employee.LastName" class="form-label"></label>
                                <input asp-for="Employee.LastName" class="form-control" />
                                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label asp-for="Employee.Email" class="form-label"></label>
                                <input asp-for="Employee.Email" class="form-control" />
                                <span asp-validation-for="Employee.Email" class="text-danger"></span>
                            </div>

                            <!-- Job Title -->
                            <div class="col-md-6">
                                <label asp-for="Employee.JobTitle" class="form-label"></label>
                                <input asp-for="Employee.JobTitle" class="form-control" />
                                <span asp-validation-for="Employee.JobTitle" class="text-danger"></span>
                            </div>

                            <!-- Salary -->
                            <div class="col-md-6">
                                <label asp-for="Employee.Salary" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Employee.Salary" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                            </div>

                            <!-- Department -->
                            <div class="col-md-6">
                                <label asp-for="Employee.DepartmentId" class="form-label">Department</label>
                                <select asp-for="Employee.DepartmentId" class="form-select" asp-items="Model.Departments">
                                    <option value="">-- Select Department --</option>
                                </select>
                                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle me-1"></i>
                                Save Changes
                            </button>
                            <a asp-page="Index" class="btn btn-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i>
                                Cancel
                            </a>
                            <a asp-page="Details" asp-route-id="@Model.Employee.Id" class="btn btn-outline-info px-4">
                                <i class="bi bi-eye me-1"></i>
                                View Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Employee Information Card -->
            <div class="card shadow-sm content-glass mt-4">
                <div class="card-body">
                    <h6 class="card-title text-muted">Employee Information</h6>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <small class="text-muted">Full Name</small>
                            <div class="fw-bold">@Model.Employee.FullName</div>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Years of Service</small>
                            <div class="fw-bold">@Model.Employee.YearsOfService.ToString("F1") years</div>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Department</small>
                            <div class="fw-bold">@Model.Employee.Department?.Name</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
