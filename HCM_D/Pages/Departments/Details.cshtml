@page
@model HCM_D.Pages.Departments.DetailsModel
@{
    ViewData["Title"] = "Department Details";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm content-glass mb-4">
                <div class="card-body p-4">
                    <h3 class="mb-4">Department Details</h3>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Name</label>
                        <div>@Model.Department.Name</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Employees</label>
                        @if (Model.Department.Employees != null && Model.Department.Employees.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped align-middle">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Job Title</th>
                                            <th>Salary</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var emp in Model.Department.Employees)
                                        {
                                            <tr>
                                                <td>@emp.FirstName @emp.LastName</td>
                                                <td>@emp.Email</td>
                                                <td>@emp.JobTitle</td>
                                                <td>@emp.Salary.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No employees in this department.</p>
                        }
                    </div>
                </div>
            </div>
            <div class="mb-4">
                <a asp-page="Index" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </div>
    </div>
</div>