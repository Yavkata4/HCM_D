@page
@model HCM_D.Pages.Departments.DeleteModel
@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<h1>Delete Department</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        @Html.Raw(ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage)
    </div>
}

<div class="alert alert-danger">
    Are you sure you want to delete the department <strong>@Model.Department.Name</strong>?
</div>

<form method="post">
    <input type="hidden" asp-for="Department.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
