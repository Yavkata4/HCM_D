@page
@model HCM_D.Pages.Departments.DeleteModel
@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm content-glass">
                <div class="card-body p-4">
                    <h3 class="mb-4">
                        <i class="bi bi-exclamation-triangle text-danger me-2"></i>
                        Delete Department
                    </h3>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h6 class="alert-heading">Cannot Delete Department</h6>
                            <ul class="mb-0">
                                @foreach (var modelStateEntry in ViewData.ModelState)
                                {
                                    @foreach (var error in modelStateEntry.Value.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Confirm Deletion
                        </h5>
                        <p class="mb-0">
                            Are you sure you want to delete the department <strong>"@Model.Department?.Name"</strong>?
                        </p>
                    </div>

                    @if (Model.BlockingReasons?.Any() == true)
                    {
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="bi bi-info-circle me-2"></i>
                                What will happen when you delete this department:
                            </h6>
                            <ul class="mb-0">
                                @foreach (var reason in Model.BlockingReasons)
                                {
                                    <li>@reason</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="bi bi-people me-2"></i>
                                        Employees
                                    </h6>
                                    <p class="card-text">
                                        @if (Model.Department?.Employees?.Any() == true)
                                        {
                                            <span class="badge bg-warning">@Model.Department.Employees.Count employee(s)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">No employees</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="bi bi-graph-up me-2"></i>
                                        Growth Records
                                    </h6>
                                    <p class="card-text">
                                        <span class="badge bg-secondary">Will be checked during deletion</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <form method="post" class="d-inline">
                            <!-- Use route parameter instead of model binding to avoid validation issues -->
                            <button type="submit" class="btn btn-danger px-4" 
                                    asp-route-id="@Model.Department?.Id"
                                    onclick="return confirm('This action cannot be undone. Are you absolutely sure you want to delete this department?')">
                                <i class="bi bi-trash me-2"></i>Delete Department
                            </button>
                        </form>
                        <a asp-page="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
