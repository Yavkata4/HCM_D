@page
@model HCM_D.Pages.Departments.EditModel
@{
    ViewData["Title"] = "Edit Department";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm content-glass mb-4">
                <div class="card-body p-4">
                    <h3 class="mb-4">Edit Department</h3>
                    <form method="post">
                        <input type="hidden" asp-for="Department.Id" />
                        <div class="mb-3">
                            <label asp-for="Department.Name" class="form-label"></label>
                            <input asp-for="Department.Name" class="form-control" />
                            <span asp-validation-for="Department.Name" class="text-danger"></span>
                        </div>
                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">Update</button>
                            <a asp-page="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card shadow-sm content-glass mb-4">
                <div class="card-body p-4">
                    <h4 class="mb-3">Manage Employees</h4>
                    @if (Model.Department.Employees != null && Model.Department.Employees.Count > 0)
                    {
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Job Title</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var emp in Model.Department.Employees)
                                {
                                    <tr>
                                        <td>@emp.FirstName @emp.LastName</td>
                                        <td>@emp.Email</td>
                                        <td>@emp.JobTitle</td>
                                        <td>
                                            <form method="post" asp-page-handler="RemoveEmployee" class="d-inline">
                                                <input type="hidden" name="departmentId" value="@Model.Department.Id" />
                                                <input type="hidden" name="removeEmployeeId" value="@emp.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Are you sure you want to remove @emp.FirstName @emp.LastName from this department? They will be moved to the Unassigned department.')">
                                                    <i class="bi bi-person-dash me-1"></i>Remove
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No employees in this department.</p>
                    }
                    
                    @if (Model.AvailableEmployees.Any())
                    {
                        <form method="post" asp-page-handler="AddEmployee" class="mt-4">
                            <input type="hidden" name="departmentId" value="@Model.Department.Id" />
                            <div class="row g-2 align-items-center">
                                <div class="col">
                                    <select name="addEmployeeId" class="form-select" required>
                                        <option value="">Select employee to add...</option>
                                        @foreach (var emp in Model.AvailableEmployees)
                                        {
                                            var currentDept = emp.Department?.Name ?? "No Department";
                                            var displayText = $"{emp.FirstName} {emp.LastName} ({emp.Email})";
                                            if (currentDept == "Unassigned")
                                            {
                                                displayText += " - Currently Unassigned";
                                            }
                                            else if (currentDept != "No Department")
                                            {
                                                displayText += $" - Currently in {currentDept}";
                                            }
                                            <option value="@emp.Id">@displayText</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-person-plus me-1"></i>Add Employee
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="mt-4 p-3 bg-light rounded">
                            <p class="text-muted mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                All employees are currently assigned to departments.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
