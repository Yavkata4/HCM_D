@page "/test-edit/{id:int?}"
@model HCM_D.Pages.TestEditModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Test Employee Edit";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-tools me-2"></i>Employee Edit Test Tool</h4>
                </div>
                <div class="card-body">
                    @if (Model.Employee != null)
                    {
                        var user = await UserManager.GetUserAsync(User);
                        var userRoles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();

                        <div class="alert alert-info">
                            <h6>Testing employee edit for: <strong>@Model.Employee.FullName</strong></h6>
                            <p class="mb-0">Use this page to test if employee editing works with all required fields properly populated.</p>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <h6 class="text-primary">User Information</h6>
                                <table class="table table-sm">
                                    <tr><td><strong>User:</strong></td><td>@(user?.Email ?? "N/A")</td></tr>
                                    <tr><td><strong>Roles:</strong></td><td>@string.Join(", ", userRoles)</td></tr>
                                </table>
                            </div>
                            
                            <div class="col-md-6">
                                <h6 class="text-success">Employee Information</h6>
                                <table class="table table-sm">
                                    <tr><td><strong>ID:</strong></td><td>@Model.Employee.Id</td></tr>
                                    <tr><td><strong>Employee #:</strong></td><td>@Model.Employee.EmployeeNumber</td></tr>
                                    <tr><td><strong>Name:</strong></td><td>@Model.Employee.FullName</td></tr>
                                    <tr><td><strong>Department:</strong></td><td>@Model.Employee.Department?.Name</td></tr>
                                </table>
                            </div>
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="Employee.Id" />
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Employee.EmployeeNumber" class="form-label">Employee Number *</label>
                                    <input asp-for="Employee.EmployeeNumber" class="form-control bg-light" readonly />
                                    <span asp-validation-for="Employee.EmployeeNumber" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Employee.HireDate" class="form-label">Hire Date *</label>
                                    <input asp-for="Employee.HireDate" type="date" class="form-control" />
                                    <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Employee.FirstName" class="form-label">First Name *</label>
                                    <input asp-for="Employee.FirstName" class="form-control" />
                                    <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Employee.LastName" class="form-label">Last Name *</label>
                                    <input asp-for="Employee.LastName" class="form-control" />
                                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Employee.Email" class="form-label">Email *</label>
                                    <input asp-for="Employee.Email" class="form-control" />
                                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Employee.JobTitle" class="form-label">Job Title *</label>
                                    <input asp-for="Employee.JobTitle" class="form-control" />
                                    <span asp-validation-for="Employee.JobTitle" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Employee.Salary" class="form-label">Salary *</label>
                                    <input asp-for="Employee.Salary" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Employee.DepartmentId" class="form-label">Department *</label>
                                    <select asp-for="Employee.DepartmentId" class="form-select" asp-items="Model.Departments"></select>
                                    <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mt-4">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Test Save Employee
                                </button>
                                <a href="/Employees" class="btn btn-secondary">Back to Employees</a>
                                <a href="/Employees/Edit/@Model.Employee.Id" class="btn btn-primary">Regular Edit Page</a>
                            </div>
                        </form>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-4">
                                <h6>Validation Errors:</h6>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        }

                        @if (TempData["TestResult"] != null)
                        {
                            <div class="alert alert-info mt-4">
                                <h6>Test Result:</h6>
                                <p class="mb-0">@TempData["TestResult"]</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h6>Employee Not Found</h6>
                            <p class="mb-0">Please provide a valid employee ID in the URL: <code>/test-edit/{id}</code></p>
                            <div class="mt-3">
                                <a href="/Employees" class="btn btn-primary">View All Employees</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}