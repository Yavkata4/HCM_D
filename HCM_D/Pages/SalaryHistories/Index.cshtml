@page
@model HCM_D.Pages.SalaryHistories.IndexModel
@{
    ViewData["Title"] = Model.IsManager ? $"{Model.DepartmentName} Department - Salary History" : "Salary History";
    Layout = "~/Pages/Shared/_ModernLayout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-6">
            @if (Model.IsManager)
            {
                <h2>
                    <i class="bi bi-clock-history me-2"></i>
                    @Model.DepartmentName Department
                </h2>
                <p class="text-muted">Salary history for your department employees</p>
            }
            else
            {
                <h2>
                    <i class="bi bi-clock-history me-2"></i>
                    Salary History
                </h2>
                <p class="text-muted">Complete salary change history</p>
            }
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>
                Create New
            </a>
        </div>
    </div>

    @if (Model.IsManager && !string.IsNullOrEmpty(Model.DepartmentName))
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Manager View:</strong> You are viewing salary histories for employees in your department only. 
            Total employees with salary changes: @Model.EmployeeSalaryHistories.Count
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            @if (Model.EmployeeSalaryHistories == null || Model.EmployeeSalaryHistories.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    @if (Model.IsManager)
                    {
                        <h4 class="text-muted mt-3">No salary history in your department</h4>
                        <p class="text-muted">No salary changes have been recorded for employees in the @Model.DepartmentName department yet.</p>
                    }
                    else
                    {
                        <h4 class="text-muted mt-3">No salary history found</h4>
                        <p class="text-muted">No salary changes have been recorded yet.</p>
                    }
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>
                        Create First Salary Change
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Department</th>
                                <th>Old Salary</th>
                                <th>New Salary</th>
                                <th>Change</th>
                                <th>Changed On</th>
                                <th>Changed By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var empGroup in Model.EmployeeSalaryHistories)
                            {
                                var latestChange = empGroup.LatestChange;
                                var salaryChange = latestChange.NewSalary - latestChange.OldSalary;
                                var changePercentage = latestChange.OldSalary > 0 ? (salaryChange / latestChange.OldSalary) * 100 : 0;
                                
                                <tr>
                                    <td>
                                        <strong>@empGroup.Employee.FullName</strong><br />
                                        <small class="text-muted">@empGroup.Employee.JobTitle</small>
                                    </td>
                                    <td>@empGroup.Employee.Department?.Name</td>
                                    <td>@latestChange.OldSalary.ToString("C")</td>
                                    <td>@latestChange.NewSalary.ToString("C")</td>
                                    <td>
                                        @if (salaryChange > 0)
                                        {
                                            <span class="text-success">
                                                <i class="bi bi-arrow-up"></i>
                                                +@salaryChange.ToString("C") (+@changePercentage.ToString("F1")%
                                            </span>
                                        }
                                        else if (salaryChange < 0)
                                        {
                                            <span class="text-danger">
                                                <i class="bi bi-arrow-down"></i>
                                                @salaryChange.ToString("C") (@changePercentage.ToString("F1")%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Change</span>
                                        }
                                    </td>
                                    <td>@latestChange.ChangedOn.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@latestChange.ChangedBy</td>
                                    <td>
                                        <a asp-page="Details" asp-route-employeeId="@empGroup.Employee.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
