@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var userRoles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();
    var displayRole = userRoles.FirstOrDefault() ?? "Employee";
    
    <div class="user-authenticated">
        <div class="dropdown">
            <a href="#" class="user-menu dropdown-toggle d-flex align-items-center text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="user-avatar me-2">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-person-fill"></i>
                    </div>
                </div>
                <div class="user-info d-none d-md-block">
                    <div class="user-name fw-medium">@await Component.InvokeAsync("UserDisplayName")</div>
                    <div class="user-role text-muted small">@displayRole</div>
                </div>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-lg" style="min-width: 220px;">
                <li class="dropdown-header">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <div>
                            <div class="fw-medium">@await Component.InvokeAsync("UserDisplayName")</div>
                            <small class="text-muted">@displayRole - Signed in</small>
                        </div>
                    </div>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2" asp-page="/Employees/MyProfile">
                        <i class="bi bi-person-circle me-3 text-primary"></i>
                        <div>
                            <div>My Profile</div>
                            <small class="text-muted">View personal information</small>
                        </div>
                    </a>
                </li>
                @{
                    var isEmployee = userRoles.Contains("Employee") && !userRoles.Contains("Manager") && !userRoles.Contains("HR Admin");
                }
                @if (isEmployee)
                {
                    <li>
                        <a class="dropdown-item d-flex align-items-center py-2" asp-page="/SalaryHistories/MyHistory">
                            <i class="bi bi-clock-history me-3 text-info"></i>
                            <div>
                                <div>My Salary History</div>
                                <small class="text-muted">View compensation</small>
                            </div>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a class="dropdown-item d-flex align-items-center py-2" asp-page="/SalaryHistories/Index">
                            <i class="bi bi-clock-history me-3 text-info"></i>
                            <div>
                                <div>Salary Management</div>
                                <small class="text-muted">Manage salaries</small>
                            </div>
                        </a>
                    </li>
                }
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                        <button type="submit" class="dropdown-item text-danger d-flex align-items-center py-2 w-100">
                            <i class="bi bi-box-arrow-right me-3"></i>
                            <div>
                                <div>Sign Out</div>
                                <small class="text-muted">End your session</small>
                            </div>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
}
else
{
    <div class="user-unauthenticated d-flex align-items-center gap-2">
        <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus me-1"></i>
            <span class="d-none d-md-inline">Register</span>
        </a>
        <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>
            <span class="d-none d-md-inline">Sign In</span>
        </a>
    </div>
}

<style>
.user-menu {
    padding: 0.5rem 1rem;
    border-radius: 50px;
    transition: all 0.3s ease;
    color: var(--text-primary);
}

.user-menu:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    text-decoration: none;
}

.dropdown-header {
    padding: 1rem;
    background: rgba(248, 249, 250, 0.5);
    border-radius: 0.5rem 0.5rem 0 0;
    margin: -0.5rem -0.5rem 0 -0.5rem;
}

.dropdown-item {
    border-radius: 0.375rem;
    margin: 0.125rem 0.5rem;
    transition: all 0.2s ease;
}

.dropdown-item:hover {
    background: rgba(67, 97, 238, 0.1);
    transform: translateX(3px);
}

.dropdown-item.text-danger:hover {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
}

.user-authenticated .dropdown-menu {
    border: none;
    box-shadow: 0 10px 40px rgba(0,0,0,0.15);
    border-radius: 12px;
    padding: 0.5rem;
    margin-top: 0.5rem;
}

.btn-sm {
    border-radius: 20px;
    font-weight: 500;
}
</style>
