@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NovaHR Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/modern-layout.css" asp-append-version="true" />
</head>

<body>
    <div class="sidebar-wrapper">
        <div class="sidebar d-flex flex-column p-3">
            <a class="navbar-brand mb-4" asp-area="" asp-page="/Index">
                <div class="brand-container text-center">
                    <i class="bi bi-bar-chart-line brand-icon"></i>
                    <div class="brand-text">NovaHR Solutions</div>
                </div>
            </a>
            <nav class="nav flex-column">
                <a class="nav-link d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="bi bi-house-door nav-icon"></i>
                    <span class="nav-text">Home</span>
                </a>
                <a class="nav-link d-flex align-items-center" asp-area="" asp-page="/Employees/Index">
                    <i class="bi bi-person-badge nav-icon"></i>
                    <span class="nav-text">Employees</span>
                </a>
                <a class="nav-link d-flex align-items-center" asp-area="" asp-page="/Departments/Index">
                    <i class="bi bi-building nav-icon"></i>
                    <span class="nav-text">Departments</span>
                </a>
                <a class="nav-link d-flex align-items-center" asp-area="" asp-page="/SalaryHistories/Index">
                    <i class="bi bi-currency-dollar nav-icon"></i>
                    <span class="nav-text">Salary History</span>
                </a>
                <a class="nav-link d-flex align-items-center" asp-area="" asp-page="/Privacy">
                    <i class="bi bi-shield-lock nav-icon"></i>
                    <span class="nav-text">Privacy</span>
                </a>
            </nav>
            <div class="mt-auto">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </div>
    <div class="main-wrapper">
        <div class="topbar">
            <div class="d-flex justify-content-between align-items-center px-4 py-3">
                <div class="d-flex align-items-center">
                    <button class="btn btn-link text-dark p-0 me-3 d-lg-none menu-toggle">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="d-flex align-items-center">
                    <a asp-page="/Employees/MyProfile" class="profile-button">
                        <i class="bi bi-person-circle"></i>
                        <span class="ms-2">My Profile</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="main-content">
            @RenderBody()
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center">
                    <span>&copy; @DateTime.Now.Year - NovaHR Solutions</span>
                    <a asp-area="" asp-page="/Privacy">Privacy Policy</a>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Handle active navigation links
        document.addEventListener('DOMContentLoaded', function () {
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });

            // Mobile menu toggle
            const menuToggle = document.querySelector('.menu-toggle');
            const sidebarWrapper = document.querySelector('.sidebar-wrapper');
            const mainWrapper = document.querySelector('.main-wrapper');

            if (menuToggle) {
                menuToggle.addEventListener('click', function () {
                    sidebarWrapper.classList.toggle('sidebar-mobile-open');
                    mainWrapper.classList.toggle('main-shifted');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
